%h2= t('.resend_confirmation_instructions')
= form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f|
  = devise_error_messages!
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.label :email, class: "mdl-textfield__label"
    = f.email_field :email, autofocus: true, class: "mdl-textfield__input", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
  %br/
  %button.mdl-button.mdl-js-button.mdl-button--raised{type: "submit"}
    = t('.resend_confirmation_instructions')
= render "devise/shared/links"
