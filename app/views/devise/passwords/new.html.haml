%h2= t('.forgot_your_password')
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = devise_error_messages!
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.label :email, class: "mdl-textfield__label"
    = f.email_field :email, autofocus: true, class: "mdl-textfield__input"
  %br/
  %button.mdl-button.mdl-js-button.mdl-button--raised{type: "submit"}
    = t('.send_me_reset_password_instructions')
= render "devise/shared/links"
